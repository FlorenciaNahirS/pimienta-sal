<!DOCTYPE html>
<html>
  <%- include('./partials/head') %>
  <body>
    <!-- Navbar (sit on top) -->
    <%- include('./partials/navTop') %>

    <!-- Header -->
    <header class="ps-display-container ps-content ps-wide" id="home">
      <img
        class="ps-image"
        src="/images/header.jpg"
        alt="Pimienta & Sal"
        width="1600"
        height="800"
      />
      <div class="ps-display-bottomleft ps-padding-large ps-opacity">
        <h1 class="ps-xxlarge">Sabores que enamoran</h1>
      </div>
    </header>

    <!-- Page content -->
    <div class="ps-content">
      <!-- About Section -->

      <hr />
      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center">Nuentro Menu</h1>

          <% platos.forEach(plato => { %>
            
            <br />
            <a href="/detalle/<%= plato.name %>" class="platos">
              <h4><%= plato.name %></h4>
              <p class="ps-text-grey">
                <%= plato.description %> U$S <%= plato.price %>
              </p>
            </a>

          <% }) %>          

        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/menu.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      <%- include('./partials/footer') %>
    </div>
  </body>
</html>
